<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:background="@drawable/rect_set_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/setnetIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:scaleType="fitXY"
            android:src="@mipmap/set_wifi_icon" />

        <TextView
            android:id="@+id/setnetText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/setnetIcon"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/wifi_set"
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/setnetNextBt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/next_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />

        <hust.nursenfcclient.init.MySwitchButton
            android:id="@+id/stateSwitch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toLeftOf="@id/setnetNextBt"
            android:layout_centerVertical="true"
            android:background="@mipmap/switch_closed_icon" />

    </RelativeLayout>

</LinearLayout>

